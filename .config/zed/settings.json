{
  "agent": {
    "always_allow_tool_actions": true
  },
  "context_servers": {
    "figma": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "mcp-remote", "http://127.0.0.1:3845/sse"],
      "env": {}
    }
  },
  "theme": "One Dark",
  "language_models": {
    "anthropic": {}
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "ui_font_size": 13,
  "ui_font_family": "MesloLGS NF",
  "buffer_font_size": 13, // Font size for editor buffers
  "buffer_font_family": "MesloLGS NF",
  "agent_ui_font_size": 13,

  "vim": {
    "use_system_clipboard": "always"
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  },
  "terminal": {
    //   "alternate_scroll": "off",
